@page "/rides"
@using BikeTracking.Shared.DTOs
@using System.Net.Http.Json
@inject HttpClient Http
@inject NavigationManager Navigation

<PageTitle>My Rides</PageTitle>

<div class="ride-list-container">
    <h1>My Rides</h1>
    
    <div class="action-bar">
        <button class="btn btn-primary" @onclick="NavigateToAdd">
            <FluentIcon Icon="@FluentIcons.Add" />
            Add New Ride
        </button>
    </div>

    @if (isLoading)
    {
        <p>Loading rides...</p>
    }
    else if (rides == null || rides.Count == 0)
    {
        <p>No rides yet. <a href="/rides/add">Record your first ride!</a></p>
    }
    else
    {
        <div class="rides-table-wrapper">
            <table class="rides-table">
                <thead>
                    <tr>
                        <th>Ride Name</th>
                        <th>Route</th>
                        <th>Distance</th>
                        <th>Age</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ride in rides)
                    {
                        <tr class="ride-row">
                            <td class="ride-name">
                                <a href="/rides/@ride.RideId">@ride.RideName</a>
                            </td>
                            <td class="route">
                                @ride.StartLocation → @ride.EndLocation
                            </td>
                            <td class="distance">
                                @ride.Distance @ride.DistanceUnit
                            </td>
                            <td class="age">
                                @GetAgeDisplay(ride.AgeInDays)
                            </td>
                            <td class="actions">
                                <button class="btn btn-sm btn-secondary" @onclick="() => NavigateToEdit(ride.RideId)">
                                    Edit
                                </button>
                                <button class="btn btn-sm btn-danger" 
                                        disabled="@(!ride.CanDelete)"
                                        @onclick="() => ConfirmDelete(ride.RideId)"
                                        title="@(ride.CanDelete ? """" : "Rides older than 90 days cannot be deleted")"
                                >
                                    Delete
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- T049: Pagination Controls -->
        <div class="pagination-controls">
            <button class="btn btn-sm" disabled="@(currentPage <= 1)" @onclick="PreviousPage">
                ← Previous
            </button>
            <span class="page-info">
                Page @currentPage of @totalPages
            </span>
            <button class="btn btn-sm" disabled="@(currentPage >= totalPages)" @onclick="NextPage">
                Next →
            </button>
            
            <select class="page-size-select" @onchange="ChangePageSize">
                <option value="10">10 per page</option>
                <option value="25" selected>25 per page</option>
                <option value="50">50 per page</option>
                <option value="100">100 per page</option>
            </select>
        </div>
    }
</div>

@code {
    private List<RideListItemResponse>? rides;
    private int currentPage = 1;
    private int pageSize = 25;
    private int totalRides = 0;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadRides();
    }

    private async Task LoadRides()
    {
        isLoading = true;
        try
        {
            var response = await Http.GetAsync($"/api/rides?page={currentPage}&pageSize={pageSize}");
            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadAsAsync<dynamic>();
                rides = new List<RideListItemResponse>();
                totalRides = result.total;
            }
        }
        catch (Exception ex)
        {
            // Log error
            Console.WriteLine($"Error loading rides: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private int totalPages => (totalRides + pageSize - 1) / pageSize;

    private async Task NextPage()
    {
        if (currentPage < totalPages)
        {
            currentPage++;
            await LoadRides();
        }
    }

    private async Task PreviousPage()
    {
        if (currentPage > 1)
        {
            currentPage--;
            await LoadRides();
        }
    }

    private async Task ChangePageSize(ChangeEventArgs e)
    {
        if (int.TryParse(e.Value?.ToString(), out int newSize))
        {
            pageSize = newSize;
            currentPage = 1;
            await LoadRides();
        }
    }

    private void NavigateToAdd() => Navigation.NavigateTo("/rides/add");

    private void NavigateToEdit(Guid rideId) => Navigation.NavigateTo($"/rides/{rideId}/edit");

    private async Task ConfirmDelete(Guid rideId)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this ride?"))
        {
            // Call DELETE endpoint
            var response = await Http.DeleteAsync($"/api/rides/{rideId}");
            if (response.IsSuccessStatusCode)
            {
                await LoadRides();
            }
        }
    }

    private string GetAgeDisplay(int ageInDays)
    {
        return ageInDays == 0 ? "Today" :
               ageInDays == 1 ? "Yesterday" :
               $"{ageInDays} days ago";
    }

    @inject IJSRuntime JSRuntime
}

<style>
    .ride-list-container {
        padding: 20px;
    }

    .action-bar {
        margin-bottom: 20px;
    }

    .rides-table-wrapper {
        overflow-x: auto;
        margin-bottom: 20px;
    }

    .rides-table {
        width: 100%;
        border-collapse: collapse;
    }

    .rides-table thead {
        background-color: #f5f5f5;
    }

    .rides-table th,
    .rides-table td {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    .ride-row:hover {
        background-color: #f9f9f9;
    }

    .ride-name a {
        color: var(--brand-accent, #FF7400);
        text-decoration: none;
    }

    .ride-name a:hover {
        text-decoration: underline;
    }

    .actions {
        display: flex;
        gap: 8px;
    }

    .pagination-controls {
        display: flex;
        align-items: center;
        gap: 15px;
        justify-content: center;
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 4px;
    }

    .page-size-select {
        padding: 8px;
        border: 1px solid #ddd;
        border-radius: 4px;
    }
</style>

