@* Fluent UI Brand Color Palette Component *@
@* Primary: FFCDA4, Secondary: FFB170, Accent: FF7400, Dark: D96200, DarkAlt: A74C00 *@

@namespace BikeTracking.Web.Shared

<style>
    :root {
        --brand-primary: #FFCDA4;       /* Light orange - primary actions */
        --brand-secondary: #FFB170;     /* Medium orange - secondary elements */
        --brand-accent: #FF7400;        /* Bold orange - highlights */
        --brand-dark: #D96200;          /* Dark orange - darker backgrounds */
        --brand-dark-alt: #A74C00;      /* Darkest orange - text on light */
    }

    :root[data-theme=\"light\"] {
        --background-primary: #FFFFFF;
        --background-secondary: #F5F5F5;
        --text-primary: #333333;
        --text-secondary: #666666;
    }

    :root[data-theme=\"dark\"] {
        --background-primary: #1E1E1E;
        --background-secondary: #2D2D2D;
        --text-primary: #FFFFFF;
        --text-secondary: #CCCCCC;
    }

    /* Brand-aware accent colors */
    .brand-button-primary {
        background-color: var(--brand-accent);
        color: white;
    }

    .brand-button-primary:hover {
        background-color: var(--brand-dark);
    }

    .brand-accent-text {
        color: var(--brand-accent);
    }

    .brand-border {
        border-left: 4px solid var(--brand-accent);
    }
</style>

@code {
    // This component injected into App.razor or MainLayout.razor
    // Provides theming through CSS variables for all Fluent UI components
}
