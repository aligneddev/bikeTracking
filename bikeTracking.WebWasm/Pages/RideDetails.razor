@page "/rides/{RideId:guid}"
@using BikeTracking.Shared.DTOs
@using System.Net.Http.Json
@inject HttpClient Http
@inject NavigationManager Navigation
@using bikeTracking.WebWasm.Shared

@* T056: RideDetails.razor page for viewing full ride details with weather *@

<PageTitle>Ride Details</PageTitle>

<div class="ride-details-container">
    @if (isLoading)
    {
        <p>Loading ride details...</p>
    }
    else if (ride == null)
    {
        <div class="alert alert-warning">
            <p>Ride not found.</p>
            <button class="btn btn-primary" @onclick="BackToList">Back to Rides</button>
        </div>
    }
    else
    {
        <div class="ride-header">
            <h1>@ride.RideName</h1>
            <div class="ride-meta">
                <span>@ride.Date.ToString("MMM dd, yyyy") at @ride.Hour:00</span>
                <span>•</span>
                <span>@ride.AgeInDays days ago</span>
            </div>
        </div>

        <div class="ride-details-content">
            <div class="detail-section">
                <h3>Route Information</h3>
                <div class="detail-grid">
                    <div class="detail-item">
                        <span class="label">Start Location:</span>
                        <span class="value">@ride.StartLocation</span>
                    </div>
                    <div class="detail-item">
                        <span class="label">End Location:</span>
                        <span class="value">@ride.EndLocation</span>
                    </div>
                    <div class="detail-item">
                        <span class="label">Distance:</span>
                        <span class="value">@ride.Distance @ride.DistanceUnit</span>
                    </div>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(ride.Notes))
            {
                <div class="detail-section">
                    <h3>Notes</h3>
                    <div class="notes-content">
                        @ride.Notes
                    </div>
                </div>
            }

            @* T057: Display weather using WeatherDisplay component *@
            <div class="detail-section">
                <WeatherDisplay Weather="@ride.Weather" />
            </div>

            <div class="detail-section">
                <h3>Metadata</h3>
                <div class="detail-grid">
                    <div class="detail-item">
                        <span class="label">Created:</span>
                        <span class="value">@ride.CreatedAt.ToString("g")</span>
                    </div>
                    @if (ride.ModifiedAt.HasValue)
                    {
                        <div class="detail-item">
                            <span class="label">Last Modified:</span>
                            <span class="value">@ride.ModifiedAt.Value.ToString("g")</span>
                        </div>
                    }
                </div>
            </div>
        </div>

        @* T059: Back button to return to ride list *@
        <div class="action-buttons">
            <button class="btn btn-secondary" @onclick="BackToList">
                ← Back to Rides
            </button>
            <button class="btn btn-primary" @onclick="EditRide">
                Edit Ride
            </button>
        </div>
    }
</div>

@code {
    [Parameter]
    public Guid RideId { get; set; }

    private RideResponse? ride;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadRideDetails();
    }

    private async Task LoadRideDetails()
    {
        isLoading = true;
        try
        {
            ride = await Http.GetFromJsonAsync<RideResponse>($"/api/rides/{RideId}");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading ride details: {ex.Message}");
            ride = null;
        }
        finally
        {
            isLoading = false;
        }
    }

    private void BackToList()
    {
        Navigation.NavigateTo("/rides");
    }

    private void EditRide()
    {
        Navigation.NavigateTo($"/rides/{RideId}/edit");
    }
}

