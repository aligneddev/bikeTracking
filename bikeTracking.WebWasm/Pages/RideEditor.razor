@page "/rides/{RideId:guid}/edit"
@using BikeTracking.Shared.DTOs
@using System.Net.Http.Json
@inject HttpClient Http
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<PageTitle>Edit Ride</PageTitle>

<div class="ride-editor-container">
    <h1>Edit Ride</h1>

    @if (isLoading)
    {
        <p>Loading ride...</p>
    }
    else if (ride == null)
    {
        <p>Ride not found.</p>
    }
    else
    {
        <EditForm Model="editRequest" OnValidSubmit="SaveRideAsync">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="form-group">
                <label for="date">Date</label>
                <InputDate id="date" class="form-control" @bind-Value="editRequest.Date" />
                <ValidationMessage For="() => editRequest.Date" />
            </div>

            <div class="form-group">
                <label for="hour">Hour of Day</label>
                <select id="hour" class="form-control" @onchange="OnHourChanged">
                    @for (int h = 0; h <= 23; h++)
                    {
                        <option value="@h" selected="@(editRequest.Hour == h)">
                            @h:00 - @((h + 1) % 24):00
                        </option>
                    }
                </select>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label for="distance">Distance</label>
                    <InputNumber id="distance" class="form-control" @bind-Value="editRequest.Distance" />
                    <ValidationMessage For="() => editRequest.Distance" />
                </div>

                <div class="form-group">
                    <label for="unit">Unit</label>
                    <select id="unit" class="form-control" @bind="editRequest.DistanceUnit">
                        <option value="miles">Miles</option>
                        <option value="kilometers">Kilometers</option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label for="name">Ride Name</label>
                <InputText id="name" class="form-control" @bind-Value="editRequest.RideName" />
                <ValidationMessage For="() => editRequest.RideName" />
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label for="start">Start Location</label>
                    <InputText id="start" class="form-control" @bind-Value="editRequest.StartLocation" />
                    <ValidationMessage For="() => editRequest.StartLocation" />
                </div>

                <div class="form-group">
                    <label for="end">End Location</label>
                    <InputText id="end" class="form-control" @bind-Value="editRequest.EndLocation" />
                    <ValidationMessage For="() => editRequest.EndLocation" />
                </div>
            </div>

            <div class="form-group">
                <label for="notes">Notes</label>
                <InputTextArea id="notes" class="form-control" @bind-Value="editRequest.Notes" />
                <ValidationMessage For="() => editRequest.Notes" />
            </div>

            <!-- T054: Weather re-fetch indicator -->
            @if (weatherReFetchNeeded)
            {
                <div class="alert alert-info">
                    <strong>‚ü≥ Weather will be re-fetched</strong><br />
                    You changed the date or hour, so weather data will be updated when you save.
                </div>
            }

            <div class="form-actions">
                <button type="submit" class="btn btn-primary" disabled="@isSaving">
                    @if (isSaving)
                    {
                        <span>Saving...</span>
                    }
                    else
                    {
                        <span>Save Changes</span>
                    }
                </button>
                <button type="button" class="btn btn-secondary" @onclick="CancelEdit">
                    Cancel
                </button>
            </div>
        </EditForm>
    }
</div>

@code {
    [Parameter]
    public Guid RideId { get; set; }

    private RideResponse? ride;
    private EditRideRequest editRequest = new();
    private bool isLoading = true;
    private bool isSaving = false;
    private bool weatherReFetchNeeded = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadRide();
    }

    private async Task LoadRide()
    {
        isLoading = true;
        try
        {
            ride = await Http.GetFromJsonAsync<RideResponse>($"/api/rides/{RideId}");
            
            if (ride != null)
            {
                // Pre-fill edit form with existing values
                editRequest = new EditRideRequest
                {
                    Date = ride.Date,
                    Hour = ride.Hour,
                    Distance = ride.Distance,
                    DistanceUnit = ride.DistanceUnit,
                    RideName = ride.RideName,
                    StartLocation = ride.StartLocation,
                    EndLocation = ride.EndLocation,
                    Notes = ride.Notes
                };
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading ride: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void OnHourChanged(ChangeEventArgs e)
    {
        if (int.TryParse(e.Value?.ToString(), out int hour))
        {
            editRequest.Hour = hour;
            CheckWeatherRefetch();
        }
    }

    private void CheckWeatherRefetch()
    {
        if (ride == null) return;
        
        weatherReFetchNeeded = 
            (editRequest.Date.HasValue && editRequest.Date != ride.Date) ||
            (editRequest.Hour.HasValue && editRequest.Hour != ride.Hour);
    }

    private async Task SaveRideAsync()
    {
        isSaving = true;
        try
        {
            var response = await Http.PutAsJsonAsync($"/api/rides/{RideId}", editRequest);
            if (response.IsSuccessStatusCode)
            {
                await JSRuntime.InvokeVoidAsync("alert", "Ride updated successfully!");
                Navigation.NavigateTo("/rides");
            }
            else
            {
                var errorMessage = $"Error saving ride: {response.StatusCode}";
                try
                {
                    var errorContent = await response.Content.ReadAsStringAsync();
                    errorMessage = $"Error saving ride: {errorContent}";
                }
                catch
                {
                    // Use default error message if reading response fails
                }
                await JSRuntime.InvokeVoidAsync("alert", errorMessage);
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error: {ex.Message}");
        }
        finally
        {
            isSaving = false;
        }
    }

    private void CancelEdit()
    {
        Navigation.NavigateTo("/rides");
    }
}

